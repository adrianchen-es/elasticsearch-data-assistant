{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "rules": {
    "react/prop-types": "off"
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/**",
        "**/*.test.{js,jsx}",
        "src/**/__tests__/**"
      ],
      "rules": {
        "react/prop-types": "off",
        "no-unused-vars": [
          "error",
          {
            "argsIgnorePattern": "^_"
          }
        ]
      }
    }
  ]
}
